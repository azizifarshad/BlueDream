@model BlueDream.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<style>
    body {
        background-color: #bcbcbc;
        color: #131057;
    }

    .card {
        background-color: #FFFFFF;
        border: none;
        border-radius: 1rem;
        overflow: hidden;
    }

    .card-header {
        background-color: #131057;
        color: #FAFAFF;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
    }

    .btn-logout, .btn-booking {
        background-color: #FAFAFF;
        color: #131057;
        border: none;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-left: 10px;
    }

    .btn-logout:hover, .btn-booking:hover {
        background-color: #F0C571;
        color: #131057;
    }

    .nav-tabs {
        border-bottom: none;
    }

    .nav-tabs .nav-link {
        background-color: #7b7b7b;
        color: #131057;
        font-weight: 600;
        border: none;
        border-radius: 0.5rem 0.5rem 0 0;
        margin-right: 5px;
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
    }

    .nav-tabs .nav-link:hover {
        background-color: #F0C571;
        color: #131057;
    }

    .nav-tabs .nav-link.active {
        background-color: #131057;
        color: #FAFAFF;
    }

    .nav-tabs .nav-link.active:hover {
        color: #F0C571;
    }

    .form-label {
        font-weight: 600;
        color: #131057;
    }

    .btn-save {
        background-color: #131057;
        color: #FAFAFF;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-save:hover {
        background-color: #F0C571;
        color: #131057;
    }

    .btn-secondary {
        background-color: #FAFAFF;
        color: #131057;
        border: 1px solid #131057;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-secondary:hover {
        background-color: #131057;
        color: #F0C571;
    }

    table {
        color: #131057;
        text-align: center;
    }

    table thead {
        background-color: #E9E9E9;
        color: #131057;
    }

    table tbody tr:hover {
        background-color: #F9F9F9;
    }

    .cancel-btn {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 5px 12px;
        border-radius: 5px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .cancel-btn:hover {
        background-color: #b02a37;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header">
            <h4 class="mb-0">User Dashboard</h4>
            <div>
                <a asp-controller="Booking" asp-action="Index" class="btn btn-booking btn-sm">New Booking</a>
                <form asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-logout btn-sm">Logout</button>
                </form>
            </div>
        </div>

        <div class="card-body p-4">
            <ul class="nav nav-tabs" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="info-tab" data-bs-toggle="tab" href="#info" role="tab">Profile Info</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab">Order History</a>
                </li>
            </ul>

            <div class="tab-content mt-4">
                <!-- Profile Info -->
                <div class="tab-pane fade show active" id="info" role="tabpanel">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Prefer not to say</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="ChangePassword" class="btn btn-secondary px-4">Change Password</a>
                            <button type="submit" class="btn btn-save px-4">Save Changes</button>
                        </div>
                    </form>
                </div>

                <!-- Order History -->
                <div class="tab-pane fade" id="orders" role="tabpanel">
                    @if (Model.OrderHistory != null && Model.OrderHistory.Any())
                    {
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Date & Time</th>
                                    <th>Services</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.OrderHistory)
                                {
                                    <tr>
                                        <td>@order.TimeStart.ToString("yyyy/MM/dd HH:mm")</td>
                                        <td>
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var item in order.Items)
                                                {
                                                    <li>@item.Name</li>
                                                }
                                            </ul>
                                        </td>
                                        <td>@order.FinalPrice €</td>
                                        <td>@order.Status</td>
                                        <td>
                                            @if (order.Status == BlueDream.Models.Entities.StatusEnum.Created ||
                                                 order.Status == BlueDream.Models.Entities.StatusEnum.Requested)
                                            {
                                                <form asp-controller="Booking" asp-action="CancelOrder" method="post">
                                                    <input type="hidden" name="id" value="@order.Id" />
                                                    <button type="submit" class="cancel-btn btn-sm">Cancel</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No orders found.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var activeTab = '@ViewData["ActiveTab"]';
        if (activeTab === 'orders') {
            var triggerEl = document.querySelector('#orders-tab');
            var tab = new bootstrap.Tab(triggerEl);
            tab.show();
        }
    });
</script>
}
