@{
    ViewData["Title"] = "Select Date & Time";
}

<div class="container my-5">
    <h2 class="text-center fw-bold mb-4">Select Your Preferred Date & Time</h2>

    <form asp-action="Submit" method="post">
        <div class="mb-3">
            <label for="selectedTime" class="form-label fw-bold">Choose Date & Time:</label>
            <input type="datetime-local" class="form-control" id="selectedTime" name="selectedTime" required />
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-3">Next</button>
    </form>

   @if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

</div>