@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - BlueDreams</title>

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Owl Carousel CSS -->
<link rel="stylesheet" href="css/crousel/owl.carousel.min.css">
<link rel="stylesheet" href="css/crousel/owl.theme.default.min.css">
<link rel="stylesheet" href="css/crousel/style.css">

<!-- jQuery UI CSS -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

<!-- Site CSS -->
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>
    .ui-datepicker { z-index: 999999 !important; }

    /* Cart Styles */
    .cart-dropdown {
        min-width: 280px;
        max-height: 400px;
        overflow-y: auto;
        background: #f6f1eb;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        padding: 0.5rem;
    }
    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 6px 0;
        border-bottom: 1px solid #ddd;
    }
    .cart-item:last-child { border-bottom: none; }

    .select-btn {
        border: 1px solid #1A2A6C;
        padding: 6px 16px;
        border-radius: 8px;
        font-size: 1rem;
        cursor: pointer;
        font-weight: 600;
        transition: 0.2s;
        background: #fff;
        color: #1A2A6C;
    }
    .select-btn.active {
        background: #E6BE8A;
        color: #1A2A6C;
    }
    .select-btn:hover {
        background: #E6BE8A;
        color: #1A2A6C;
    }

    /* Delete button inside mini cart */
    .delete-cart-item {
        background: transparent;
        border: none;
        padding: 0;
        margin: 0;
        cursor: pointer;
        font-size: 18px;
        line-height: 1;
    }
    .delete-cart-item:focus { outline: none; }

    /* Mobile cart toggle button */
    #mobileCartBtn { display: none; width: 100%; text-align: left; }
    @@media (max-width: 576px) {
        #mobileCartBtn { display: block; margin-top: 0.5rem; }
        #desktopCartDropdown { display: none; }
    }
    #mobileCartCollapse {
        transition: max-height 0.35s ease, padding 0.35s ease;
        overflow: hidden;
        max-height: 0;
        padding: 0 0;
    }
    #mobileCartCollapse.show {
        max-height: 500px;
        padding: 10px 15px;
    }

    /* small helpers */
    .cart-item .name { font-weight: 600; }
    .cart-total-row { padding-top: 8px; }
</style>
</head>

<body>
<header>
<nav class="navbar navbar-expand-sm navbar-dark shadow-sm">
<div class="container-fluid">
    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">BlueDreams</a>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Index", "About")">About</a>
    </li>

    <a class="navbar-brand fw-bold" href="/admin">Admin</a>
    <a class="navbar-brand fw-bold" href="/Booking">Booking</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
        </ul>

        <ul class="navbar-nav ms-auto align-items-center">
            @if(User.Identity.IsAuthenticated)
            {
                <!-- Desktop Cart -->
                <li class="nav-item dropdown me-3 d-none d-sm-block" id="desktopCartDropdown">
                    <a class="nav-link dropdown-toggle position-relative" href="#" id="cartDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        🛒 Cart
                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle badge-cart"
                              style="display:none">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end cart-dropdown" aria-labelledby="cartDropdown">
                        <li class="px-2 text-muted">Loading...</li>
                    </ul>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Profile">Profile</a>
                </li>
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link text-danger">Logout</button>
                    </form>
                </li>

                <!-- Mobile Cart Button (in navbar) -->
                <li class="nav-item d-sm-none mt-2">
                    <button class="btn btn-outline-primary w-100" type="button" data-bs-toggle="collapse"
                            data-bs-target="#mobileCartCollapse" aria-expanded="false" aria-controls="mobileCartCollapse">
                        🛒 Cart <span class="badge bg-danger badge-cart" style="display:none">0</span>
                    </button>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
        </ul>
    </div>
</div>
</nav>

<!-- Mobile Cart Collapse -->
@if(User.Identity.IsAuthenticated)
{
    <div class="collapse" id="mobileCartCollapse">
        <ul class="list-group cart-dropdown px-3">
            <li class="px-2 text-muted">Loading...</li>
        </ul>
    </div>
}
</header>

<main role="main" class="container py-4">
    @RenderBody()
</main>

<footer class="footer mt-auto py-3">
<div class="container text-center">
    <span>&copy; 1404 - BlueDreams - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
</div>
</footer>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="js/crousel/owl.carousel.min.js"></script>

<script>
$(document).ready(function () {
    // Helper: build item row HTML (desktop & mobile use same markup)
    function buildCartItemHtml(item) {
        var li =
            '<li class="cart-item d-flex justify-content-between align-items-center px-2 py-1" data-itemid="' + item.id + '">' +
                '<div class="d-flex flex-column name">' +
                    '<span class="name-text">' + escapeHtml(item.name) + '</span>' +
                '</div>' +
                '<div class="d-flex align-items-center">' +
                    '<span class="me-2 price">€' + parseFloat(item.price).toFixed(2) + '</span>' +
                    '<button class="delete-cart-item text-danger" data-id="' + item.id + '" title="Remove item" aria-label="Remove item">🗑️</button>' +
                '</div>' +
            '</li>';
        return li;
    }

    // simple escape to avoid accidental HTML injection from server data
    function escapeHtml(text) {
        return String(text)
            .replace(/&/g, '&amp;')
            .replace(/</g, '&lt;')
            .replace(/>/g, '&gt;')
            .replace(/"/g, '&quot;')
            .replace(/'/g, '&#039;');
    }

    function updateMiniCart() {
        var desktopBadge = $('#desktopCartDropdown .badge-cart');
        var desktopDropdown = $('#desktopCartDropdown .dropdown-menu');
        var mobileNavBadge = $('.navbar .badge-cart'); // covers the mobile button inside navbar
        var mobileDropdown = $('#mobileCartCollapse .cart-dropdown');

        // show loading placeholders while fetching
        if (desktopDropdown.length) desktopDropdown.html('<li class="px-2 text-muted">Loading...</li>');
        if (mobileDropdown.length) mobileDropdown.html('<li class="px-2 text-muted">Loading...</li>');

        $.getJSON('@Url.Action("GetCartItems", "Booking")')
            .done(function (data) {
                if (desktopDropdown.length) desktopDropdown.empty();
                if (mobileDropdown.length) mobileDropdown.empty();

                if (data && data.itemCount > 0) {
                    // show badges
                    if (desktopBadge.length) desktopBadge.text(data.itemCount).show();
                    if (mobileNavBadge.length) mobileNavBadge.text(data.itemCount).show();

                    // append items
                    $.each(data.items, function (i, item) {
                        var liHtml = buildCartItemHtml(item);
                        if (desktopDropdown.length) desktopDropdown.append(liHtml);
                        if (mobileDropdown.length) mobileDropdown.append(liHtml);
                    });

                    var totalHtml = '<li class="cart-total-row"><hr class="dropdown-divider"/></li>' +
                                    '<li class="px-2"><strong>Total: €' + parseFloat(data.total).toFixed(2) + '</strong></li>' +
                                    '<li class="px-2 mt-2"><a class="btn btn-primary w-100" href="@Url.Action("Calendar","Booking")">Go to Checkout</a></li>';

                    if (desktopDropdown.length) desktopDropdown.append(totalHtml);
                    if (mobileDropdown.length) mobileDropdown.append(totalHtml);
                } else {
                    // no items
                    if (desktopBadge.length) desktopBadge.hide();
                    if (mobileNavBadge.length) mobileNavBadge.hide();

                    if (desktopDropdown.length) desktopDropdown.append('<li class="px-2 text-muted">Your cart is empty</li>');
                    if (mobileDropdown.length) mobileDropdown.append('<li class="px-2 text-muted">Your cart is empty</li>');
                }

                // re-init Sortable if desktop dropdown exists
                var dropdownEl = document.querySelector('#desktopCartDropdown .dropdown-menu');
                if (dropdownEl) {
                    // Only enable Sortable on the list area, not including non-item nodes (separator/total)
                    try {
                        new Sortable(dropdownEl, { animation: 150, ghostClass: 'sortable-ghost' });
                    } catch (e) {
                        // ignore init errors (e.g., re-init)
                    }
                }
            })
            .fail(function () {
                if (desktopDropdown.length) desktopDropdown.html('<li class="px-2 text-danger">Failed to load</li>');
                if (mobileDropdown.length) mobileDropdown.html('<li class="px-2 text-danger">Failed to load</li>');
            });
    }

    // Toggle selected items (existing behavior)
    $(document).on("click", ".select-btn", function () {
        var btn = $(this);
        var itemId = btn.data("itemid");
        var groupDiv = btn.closest(".accordion-item");

        if (!btn.hasClass("active")) {
            groupDiv.find(".select-btn.active").removeClass("active");
            btn.addClass("active");
        } else {
            btn.removeClass("active");
        }

        $.post('@Url.Action("ToggleCartItem","Booking")', { itemId: itemId })
            .done(function () { updateMiniCart(); })
            .fail(function () { console.error('ToggleCartItem failed'); });
    });

    // Delete item from mini cart (desktop & mobile)
    $(document).on("click", ".delete-cart-item", function (e) {
        e.preventDefault();
        var btn = $(this);
        var id = btn.data("id");

        if (!id) return;

        // optional: confirm removal — currently immediate (uncomment if you want confirmation)
        // if (!confirm('Remove this item from cart?')) return;

        $.post('@Url.Action("RemoveCartItem", "Booking")', { itemId: id })
            .done(function () {
                updateMiniCart();
            })
            .fail(function () {
                console.error('RemoveCartItem failed');
            });
    });

    // MiniCart initial load
    updateMiniCart();

    // Owl Carousel init (kept as before)
    if ($('.owl-carousel').length) {
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            items: 1,
            autoplay: true,
            autoplayTimeout: 4000
        });
    }

    // Sortable init guard for initial DOM (in case items are present server-side)
    var initialDropdown = document.querySelector('#desktopCartDropdown .dropdown-menu');
    if (initialDropdown) {
        try {
            new Sortable(initialDropdown, { animation: 150, ghostClass: 'sortable-ghost' });
        } catch (e) {
            // ignore
        }
    }
});
</script>

@await RenderSectionAsync("Scripts", required:false)
</body>
</html>
