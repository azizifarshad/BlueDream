@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - BlueDreams</title>

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Owl Carousel CSS -->
<link rel="stylesheet" href="css/crousel/owl.carousel.min.css">
<link rel="stylesheet" href="css/crousel/owl.theme.default.min.css">
<link rel="stylesheet" href="css/crousel/style.css">

<!-- jQuery UI CSS -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

<!-- Site CSS -->
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>
/* ===== Navbar & Branding ===== */
.navbar {
    background: linear-gradient(135deg, #131057, #1A2A6C);
    padding: 0.8rem 1rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.navbar-brand {
    font-weight: 700;
    font-size: 1.6rem;
    color: #E6BE8A !important;
}
.navbar-brand:hover {
    color: #FFD580 !important;
    text-decoration: none;
}
.nav-link {
    color: #f6f1eb !important;
    font-weight: 500;
    margin-right: 0.5rem;
    transition: 0.2s;
}
.nav-link:hover {
    color: #E6BE8A !important;
    text-decoration: underline;
}

/* ===== Admin Panel Link ===== */
.admin-link {
    font-weight: 500;
    font-size: 1rem;
    color: #f6f1eb;
    margin-left: 0.5rem;
    padding: 4px 8px;
    border-radius: 6px;
    border: 1px solid transparent;
    transition: 0.2s;
}
.admin-link:hover {
    color: #E6BE8A;
    text-decoration: none;
    background: rgba(230, 190, 138, 0.1);
    border-color: #E6BE8A;
}

/* ===== Cart Dropdown ===== */
.cart-dropdown {
    min-width: 280px;
    max-height: 400px;
    overflow-y: auto;
    background: #f6f1eb;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.25);
    padding: 0.5rem;
}
.cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 6px 0;
    border-bottom: 1px solid #ddd;
}
.cart-item:last-child { border-bottom: none; }
.cart-item .name { font-weight: 600; }

/* ===== Buttons ===== */
.select-btn {
    border: 1px solid #FFD580;
    padding: 6px 16px;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    font-weight: 600;
    transition: 0.2s;
    background: #fff;
    color: #1A2A6C;
}
.select-btn.active, .select-btn:hover {
    background: #E6BE8A;
    color: #1A2A6C;
}
.delete-cart-item {
    background: transparent;
    border: none;
    cursor: pointer;
    font-size: 18px;
}
.delete-cart-item:focus { outline: none; }

/* ===== Mobile Cart ===== */
#mobileCartBtn { display: none; width: 100%; text-align: left; }
@@media (max-width: 576px) {
    #mobileCartBtn { display: block; margin-top: 0.5rem; }
    #desktopCartDropdown { display: none; }
}
#mobileCartCollapse {
    transition: max-height 0.35s ease, padding 0.35s ease;
    overflow: hidden;
    max-height: 0;
    padding: 0 0;
}
#mobileCartCollapse.show {
    max-height: 500px;
    padding: 10px 15px;
}

/* ===== Luxurious Hover Effects ===== */
.navbar-nav .nav-link {
    position: relative;
}
.navbar-nav .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    display: block;
    margin-top: 5px;
    right: 0;
    background: #FFD580;
    transition: width 0.3s ease;
}
.navbar-nav .nav-link:hover::after {
    width: 100%;
    left: 0;
    background: #FFD580;
}
</style>
</head>

<body>
<header>
<nav class="navbar navbar-expand-sm shadow-sm">
<div class="container-fluid">
    <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">BlueDreams</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarNav" aria-controls="navbarNav"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-sm-0">
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "About")">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Booking")">Booking</a>
            </li>
        </ul>

        <ul class="navbar-nav ms-auto align-items-center">
            @if(User.Identity.IsAuthenticated)
            {
                <!-- Cart for Desktop -->
                <li class="nav-item dropdown me-3 d-none d-sm-block" id="desktopCartDropdown">
                    <a class="nav-link dropdown-toggle position-relative" href="#" id="cartDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        🛒 Cart
                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle badge-cart"
                              style="display:none">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end cart-dropdown" aria-labelledby="cartDropdown">
                        <li class="px-2 text-muted">Loading...</li>
                    </ul>
                </li>

                <!-- Profile + Admin Panel -->
                <li class="nav-item d-flex align-items-center">
                    <a class="nav-link" asp-controller="Account" asp-action="Profile">Profile</a>
                    @if(User.IsInRole("Admin"))
                    {
                        <a class="nav-link admin-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                    }
                </li>

                <!-- Logout -->
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link nav-link text-danger">Logout</button>
                    </form>
                </li>

                <!-- Mobile Cart Button -->
                <li class="nav-item d-sm-none mt-2">
                    <button class="btn btn-outline-warning w-100" type="button" data-bs-toggle="collapse"
                            data-bs-target="#mobileCartCollapse" aria-expanded="false" aria-controls="mobileCartCollapse">
                        🛒 Cart <span class="badge bg-danger badge-cart" style="display:none">0</span>
                    </button>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                </li>
            }
        </ul>
    </div>
</div>
</nav>

<!-- Mobile Cart Collapse -->
@if(User.Identity.IsAuthenticated)
{
    <div class="collapse" id="mobileCartCollapse">
        <ul class="list-group cart-dropdown px-3">
            <li class="px-2 text-muted">Loading...</li>
        </ul>
    </div>
}
</header>

<main role="main" class="container py-4">
    @RenderBody()
</main>

<footer class="footer mt-auto py-3">
<div class="container text-center">
    <span>&copy; 1404 - BlueDreams - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
</div>
</footer>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script src="js/crousel/owl.carousel.min.js"></script>

<script>
$(document).ready(function () {
    function buildCartItemHtml(item) {
        return `<li class="cart-item d-flex justify-content-between align-items-center px-2 py-1" data-itemid="${item.id}">
            <div class="d-flex flex-column name">
                <span class="name-text">${escapeHtml(item.name)}</span>
            </div>
            <div class="d-flex align-items-center">
                <span class="me-2 price">€${parseFloat(item.price).toFixed(2)}</span>
                <button class="delete-cart-item text-danger" data-id="${item.id}" title="Remove item">🗑️</button>
            </div>
        </li>`;
    }
    function escapeHtml(text) {
        return String(text).replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;').replace(/'/g,'&#039;');
    }

    function updateMiniCart() {
        var desktopBadge = $('#desktopCartDropdown .badge-cart');
        var desktopDropdown = $('#desktopCartDropdown .dropdown-menu');
        var mobileNavBadge = $('.navbar .badge-cart');
        var mobileDropdown = $('#mobileCartCollapse .cart-dropdown');

        if (desktopDropdown.length) desktopDropdown.html('<li class="px-2 text-muted">Loading...</li>');
        if (mobileDropdown.length) mobileDropdown.html('<li class="px-2 text-muted">Loading...</li>');

        $.getJSON('@Url.Action("GetCartItems", "Booking")')
        .done(function (data) {
            if (desktopDropdown.length) desktopDropdown.empty();
            if (mobileDropdown.length) mobileDropdown.empty();

            if (data && data.itemCount > 0) {
                if (desktopBadge.length) desktopBadge.text(data.itemCount).show();
                if (mobileNavBadge.length) mobileNavBadge.text(data.itemCount).show();

                $.each(data.items, function (i, item) {
                    var liHtml = buildCartItemHtml(item);
                    if (desktopDropdown.length) desktopDropdown.append(liHtml);
                    if (mobileDropdown.length) mobileDropdown.append(liHtml);
                });

                var totalHtml = `<li class="cart-total-row"><hr class="dropdown-divider"/></li>
                    <li class="px-2"><strong>Total: €${parseFloat(data.total).toFixed(2)}</strong></li>
                    <li class="px-2 mt-2"><a class="btn btn-primary w-100" href="@Url.Action("Calendar","Booking")">Go to Checkout</a></li>`;

                if (desktopDropdown.length) desktopDropdown.append(totalHtml);
                if (mobileDropdown.length) mobileDropdown.append(totalHtml);
            } else {
                if (desktopBadge.length) desktopBadge.hide();
                if (mobileNavBadge.length) mobileNavBadge.hide();
                if (desktopDropdown.length) desktopDropdown.append('<li class="px-2 text-muted">Your cart is empty</li>');
                if (mobileDropdown.length) mobileDropdown.append('<li class="px-2 text-muted">Your cart is empty</li>');
            }

            var dropdownEl = document.querySelector('#desktopCartDropdown .dropdown-menu');
            if (dropdownEl) {
                try { new Sortable(dropdownEl, { animation: 150, ghostClass: 'sortable-ghost' }); } catch (e) {}
            }
        })
        .fail(function () {
            if (desktopDropdown.length) desktopDropdown.html('<li class="px-2 text-danger">Failed to load</li>');
            if (mobileDropdown.length) mobileDropdown.html('<li class="px-2 text-danger">Failed to load</li>');
        });
    }

    $(document).on("click", ".delete-cart-item", function (e) {
        e.preventDefault();
        var id = $(this).data("id");
        if (!id) return;
        $.post('@Url.Action("RemoveCartItem", "Booking")', { itemId: id })
            .done(function () { updateMiniCart(); })
            .fail(function () { console.error('RemoveCartItem failed'); });
    });

    updateMiniCart();

    if ($('.owl-carousel').length) {
        $('.owl-carousel').owlCarousel({ loop:true, margin:10, nav:true, items:1, autoplay:true, autoplayTimeout:4000 });
    }
});
</script>

@await RenderSectionAsync("Scripts", required:false)
</body>
</html>
