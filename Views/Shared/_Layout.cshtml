@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - BlueDreamsBeauty</title>

<!-- Bootstrap CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<!-- Owl Carousel CSS -->
<link rel="stylesheet" href="~/css/crousel/owl.carousel.min.css" />
<link rel="stylesheet" href="~/css/crousel/owl.theme.default.min.css" />
<link rel="stylesheet" href="~/css/crousel/style.css" />

<!-- jQuery UI CSS -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

<!-- Site CSS -->
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>
/* ================= NAVBAR ================= */
.navbar {
    background: linear-gradient(135deg, #131057, #1A2A6C);
    padding: 0.8rem 1rem;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.navbar-brand {
    font-weight: 700;
    font-size: 1.6rem;
    color: #E6BE8A !important;
}
.navbar-brand:hover { color: #FFD580 !important; }

.nav-link {
    color: #f6f1eb !important;
    font-weight: 500;
    margin-right: 0.5rem;
    transition: 0.2s;
}
.nav-link:hover {
    color: #E6BE8A !important;
    text-decoration: underline;
}

/* ================= ADMIN LINK ================= */
.admin-link {
    font-weight: 500;
    font-size: 1rem;
    color: #f6f1eb;
    margin-left: 0.5rem;
    padding: 4px 8px;
    border-radius: 6px;
    border: 1px solid transparent;
    transition: 0.2s;
}
.admin-link:hover {
    color: #E6BE8A;
    background: rgba(230,190,138,0.1);
    border-color: #E6BE8A;
}

/* ================= CART DROPDOWN ================= */
.cart-dropdown {
    min-width: 280px;
    max-height: 400px;
    overflow-y: auto;
    background: #f6f1eb;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.25);
    padding: 0.5rem;
}
.cart-item { border-bottom: 1px solid #ddd; padding: 6px 0; }
.cart-item:last-child { border-bottom: none; }

/* Mobile Cart */
#mobileCartBtn { display: none; }
@@media (max-width: 576px) {
    #mobileCartBtn { display: block; }
    #desktopCartDropdown { display: none; }
}
#mobileCartCollapse {
    transition: max-height 0.35s ease;
    overflow: hidden;
    max-height: 0;
}
#mobileCartCollapse.show { max-height: 500px; padding: 10px 15px; }

/* Hover underline animation */
.navbar-nav .nav-link { position: relative; }
.navbar-nav .nav-link::after {
    content: '';
    position: absolute;
    width: 0; height: 2px;
    bottom: -2px; left: 0;
    background: #FFD580;
    transition: width 0.3s;
}
.navbar-nav .nav-link:hover::after { width: 100%; }
</style>

@RenderSection("Styles", required:false)
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-dark">
<div class="container-fluid">

    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlueDreamsBeauty</a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">

        <ul class="navbar-nav me-auto">
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","About")">About</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Booking")">Booking</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index","Reviews",new { serviceId=1 })">Reviews</a></li>
        </ul>

        <ul class="navbar-nav ms-auto align-items-center">
            @if (User.Identity.IsAuthenticated)
            {
                <!-- Desktop Cart -->
                <li class="nav-item dropdown me-3 d-none d-sm-block" id="desktopCartDropdown">
                                <a class="nav-link dropdown-toggle position-relative" data-bs-toggle="dropdown" id="cartDropdown">
                        🛒 Cart
                        <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle badge-cart" style="display:none">0</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end cart-dropdown">
                        <li class="px-2 text-muted">Loading...</li>
                    </ul>
                </li>

                <li class="nav-item d-flex align-items-center">
                    <a class="nav-link" asp-controller="Account" asp-action="Profile">Profile</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a class="admin-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin Panel</a>
                    }
                </li>

                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="btn btn-link nav-link text-danger">Logout</button>
                    </form>
                </li>

                <!-- Mobile Cart -->
                <li class="nav-item d-sm-none mt-2">
                    <button id="mobileCartBtn" class="btn btn-outline-warning w-100" data-bs-toggle="collapse" data-bs-target="#mobileCartCollapse">
                        🛒 Cart <span class="badge bg-danger badge-cart" style="display:none">0</span>
                    </button>
                </li>
            }
            else
            {
                <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
            }
        </ul>

    </div>
</div>
</nav>

@if (User.Identity.IsAuthenticated)
{
    <div class="collapse" id="mobileCartCollapse">
        <ul class="list-group cart-dropdown">
            <li class="px-2 text-muted">Loading...</li>
        </ul>
    </div>
}
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="footer mt-auto py-3 text-center">
    <span>&copy; 1404 - BlueDreamsBeauty -
        <a asp-controller="Home" asp-action="Privacy">Privacy</a>
    </span>
</footer>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/crousel/owl.carousel.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>

<script>
$(document).ready(function () {

    function escapeHtml(t) {
        return String(t).replace(/&/g,'&amp;').replace(/</g,'&lt;')
            .replace(/>/g,'&gt;').replace(/"/g,'&quot;').replace(/'/g,'&#039;');
    }

    function buildCartItemHtml(item) {
        return `
            <li class="cart-item d-flex justify-content-between" data-itemid="${item.id}">
                <div>${escapeHtml(item.name)}</div>
                <div class="d-flex align-items-center">
                    <span class="me-2">€${parseFloat(item.price).toFixed(2)}</span>
                    <button class="delete-cart-item text-danger" data-id="${item.id}">🗑️</button>
                </div>
            </li>`;
    }

    function updateMiniCart() {

        var desktopBadge = $('#desktopCartDropdown .badge-cart');
        var desktopDropdown = $('#desktopCartDropdown .dropdown-menu');
        var mobileBadge = $('#mobileCartBtn .badge-cart');
        var mobileDropdown = $('#mobileCartCollapse .cart-dropdown');

        $.getJSON('@Url.Action("GetCartItems","Booking")')
        .done(function (data) {
            desktopDropdown.html('');
            mobileDropdown.html('');

            if (data.itemCount > 0) {
                desktopBadge.text(data.itemCount).show();
                mobileBadge.text(data.itemCount).show();

                $.each(data.items, function(i, item) {
                    var html = buildCartItemHtml(item);
                    desktopDropdown.append(html);
                    mobileDropdown.append(html);
                });

                var total = `
                    <hr>
                    <li class="px-2"><strong>Total: €${parseFloat(data.total).toFixed(2)}</strong></li>
                    <li class="px-2 mt-2">
                        <a href="@Url.Action("Calendar","Booking")" class="btn btn-primary w-100">Go to Checkout</a>
                    </li>`;

                desktopDropdown.append(total);
                mobileDropdown.append(total);
            }
            else {
                desktopBadge.hide();
                mobileBadge.hide();

                desktopDropdown.html('<li class="px-2 text-muted">Your cart is empty</li>');
                mobileDropdown.html('<li class="px-2 text-muted">Your cart is empty</li>');
            }
        });
    }

    $(document).on("click",".delete-cart-item",function(){
        $.post('@Url.Action("RemoveCartItem","Booking")',{ itemId: $(this).data("id") },updateMiniCart);
    });

    updateMiniCart();

    if ($('.owl-carousel').length)
        $('.owl-carousel').owlCarousel({ loop:true, margin:10, nav:true, items:1, autoplay:true, autoplayTimeout:4000 });

});
</script>

@RenderSection("Scripts", required:false)

</body>
</html>
