@{
ViewData["Title"] = "Page Not Found";
var particleCount = 40; // تعداد ذرات
var random = new Random();
}

<style>
    body {
        margin:0;
        padding:0;
        font-family: 'Segoe UI', Roboto, Arial, sans-serif;
        background-color: #0d0d2b; /* Dark Night Background */
        overflow-x: hidden;
        color: #f6f1eb;
    }

    .notfound-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        height: 100vh;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    h1 {
        font-size: 8rem;
        font-weight: bold;
        margin: 0;
        color: #f6f1eb;
        text-shadow: 2px 2px 10px rgba(255,255,255,0.3);
    }

    p {
        font-size: 1.5rem;
        margin: 15px 0 30px 0;
        color: #d9c3a1;
    }

    a.btn-home {
        padding: 12px 25px;
        background-color: #1a2a6c;
        color: #f6f1eb;
        font-weight: 600;
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    a.btn-home:hover {
        background-color: #d9c3a1;
        color: #1a2a6c;
        transform: translateY(-2px) scale(1.05);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

    /* Particles */
    .particle {
        position: absolute;
        width: 6px;
        height: 6px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        animation: drift 6s linear infinite;
    }

    @@keyframes drift {
        0% { transform: translateY(0) translateX(0); opacity: 0.2; }
        50% { transform: translateY(-30px) translateX(20px) scale(1.2); opacity: 0.6; }
        100% { transform: translateY(0) translateX(0); opacity: 0.2; }
    }

    /* Responsive */
    @@media(max-width:768px){
        h1 { font-size: 5rem; }
        p { font-size: 1.2rem; }
        a.btn-home { padding: 10px 20px; font-size: 0.9rem; }
    }
</style>

<div class="notfound-container">
    <h1>404</h1>
    <p>Oops! The page you are looking for does not exist.</p>
    <a asp-controller="Home" asp-action="Index" class="btn-home">Back to Home</a>

    @for (int i = 0; i < particleCount; i++)
    {
    var top = random.Next(0, 100);
    var left = random.Next(0, 100);
    var delay = Math.Round(random.NextDouble() * 6, 2); // تا 6 ثانیه
    <span class="particle" style="top:@top%; left:@left%; animation-delay:@($"{delay}s");"></span>
    }
</div>
