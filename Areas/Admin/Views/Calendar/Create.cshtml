@model BlueDream.Models.Entities.Calendar

@{
    ViewData["Title"] = "Create Calendar Slot";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<BlueDream.Models.Entities.CalendarSlotType>()"></select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>