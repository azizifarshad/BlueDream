@model BlueDream.Models.Entities.Calendar
@{
    ViewBag.Title = Model.Id == 0 ? "Create Slot" : "Edit Slot";
}

<h2>@ViewBag.Title</h2>

<form asp-action="@(ViewBag.Title == "Create Slot" ? "Create" : "Edit")" method="post">
    <div class="form-group">
        <label asp-for="Type"></label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<BlueDream.Models.Entities.CalendarSlotType>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" type="time" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>