@model BlueDream.Models.Entities.Calendar
@{
    ViewData["Title"] = Model.Id == 0 ? "Create Slot" : "Edit Slot";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold text-primary mb-4">@ViewData["Title"]</h2>

    <form asp-action="@(ViewData["Title"].ToString().Contains("Create") ? "Create" : "Edit")" method="post" class="row g-3">
        <input type="hidden" asp-for="Id" />

        <div class="col-12 col-md-6">
            <label asp-for="Type" class="form-label"></label>
            <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<BlueDream.Models.Entities.CalendarSlotType>()"></select>
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
        </div>

        <div class="col-6 col-md-3">
            <label asp-for="StartTime" class="form-label"></label>
            <input asp-for="StartTime" class="form-control" type="time" />
        </div>

        <div class="col-6 col-md-3">
            <label asp-for="EndTime" class="form-label"></label>
            <input asp-for="EndTime" class="form-control" type="time" />
        </div>

        <div class="col-12 col-md-6">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
        </div>

        <div class="col-12 col-md-6 d-flex align-items-center">
            <div class="form-check mt-2">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-success me-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>