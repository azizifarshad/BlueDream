@model IEnumerable<BlueDream.Models.Entities.SocialLink>

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold">Manage Social Links</h2>

    <div class="mb-3">
        <a href="/Admin/SocialLinks/Create" class="btn btn-primary">Add New Link</a>
    </div>

    <div class="table-responsive d-none d-md-block">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Icon</th>
                    <th>Title</th>
                    <th>URL</th>
                    <th style="width:150px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.IconUrl" width="32" /></td>
                        <td>@item.Title</td>
                        <td>@item.Url</td>
                        <td>
                            <a asp-area="Admin" asp-controller="SocialLinks" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-1">Edit</a>
                            <form asp-area="Admin" asp-controller="SocialLinks" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this link?');">
                                <button type="submit" class="btn btn-sm btn-danger mb-1">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile view: cards -->
    <div class="d-md-none">
        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body d-flex align-items-center justify-content-between flex-wrap">
                    <div class="d-flex align-items-center mb-2">
                        <img src="@item.IconUrl" width="40" class="me-3 rounded" />
                        <div>
                            <div class="fw-bold">@item.Title</div>
                            <div class="text-truncate" style="max-width:200px;">@item.Url</div>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-area="Admin" asp-controller="SocialLinks" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning flex-grow-1">Edit</a>
                        <form asp-area="Admin" asp-controller="SocialLinks" asp-action="Delete" asp-route-id="@item.Id" method="post" class="flex-grow-1" onsubmit="return confirm('Are you sure?');">
                            <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
