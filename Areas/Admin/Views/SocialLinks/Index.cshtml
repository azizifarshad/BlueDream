@model IEnumerable<BlueDream.Models.Entities.SocialLink>

<h2>Manage Social Links</h2>

<p>
    <a href="/Admin/SocialLinks/Create" class="btn btn-primary">Add New Link</a>
</p>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Icon</th>
        <th>Title</th>
        <th>URL</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.IconUrl" width="32" /></td>
            <td>@item.Title</td>
            <td>@item.Url</td>
            <td>
                <a asp-area="Admin" asp-controller="SocialLinks" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <form asp-area="Admin" asp-controller="SocialLinks" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline-block" onsubmit="return confirm('Are you sure you want to delete this link?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>