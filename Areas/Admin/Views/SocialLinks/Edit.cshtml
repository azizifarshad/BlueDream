@model BlueDream.Models.Entities.SocialLink

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold">Edit Social Link</h2>

    <form asp-area="Admin" asp-controller="SocialLinks" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Url" class="form-label">URL</label>
            <input asp-for="Url" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Current Icon</label><br />
            @if (!string.IsNullOrEmpty(Model.IconUrl))
            {
                <img src="@Model.IconUrl" width="48" class="mb-2 rounded" />
            }
        </div>

        <div class="mb-3">
            <label class="form-label">Upload New Icon (optional)</label>
            <input type="file" name="iconFile" class="form-control" />
        </div>

        <div class="d-flex flex-column flex-sm-row gap-2">
            <button type="submit" class="btn btn-success flex-grow-1">Save Changes</button>
            <a asp-area="Admin" asp-controller="SocialLinks" asp-action="Index" class="btn btn-secondary flex-grow-1">Cancel</a>
        </div>
    </form>
</div>